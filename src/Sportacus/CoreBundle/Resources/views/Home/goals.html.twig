<div class="row">
    <div class="col-md-6">
    <h2>Vos prochains objectifs</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Valeur</th>
            </tr>
        </thead>
        <tbody>
            {% for goal in nextGoals %}
            <tr>
                <td>{{ goal.date|date('d/m/Y') }}</td>
                <td>{{ goal.typeMeasure.name }}</td>
                <td>{{ goal.value }}</td>
                
            </tr>
            {% endfor %}
        </tbody>

    </table>
    </div>
    <div class="col-md-6">
    <h2>Vos objectifs pass√©s</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Valeur</th>
            </tr>
        </thead>
        <tbody>
            {% for goal in lastGoals %}
            <tr class="{% if goal.status == 1 %}success{% elseif goal.status == 0 %}danger{% endif %}" >
                <td>{{ goal.date|date('d/m/Y') }}</td>
                <td>{{ goal.typeMeasure.name }}</td>
                <td>{{ goal.value }}</td>
                
            </tr>
            {% endfor %}
        </tbody>

    </table>
    </div>
    <div>
        <a href="{{ path('_goal_add') }}" id="add-goal" class="btn btn-primary">Ajouter un objectif</a>
    </div>
</div>