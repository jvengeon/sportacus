    <!-- Bootstrap -->
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">

    {% stylesheets 'bundles/sportacuscore/css/*' filter='cssrewrite' output='css/jquery-ui.css' %}
