          </ul>
          
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
    {% block jumbotron %}
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      {% if app.session.flashbag.peekAll %}
    <div id="flashes">
        {% for name, messages in app.session.flashbag.all %}
            <div class="flash {{ name }}">
                <div class="wrap">
                    {{ messages|join(', ') }}
                </div>
            </div>
        {% endfor %}
    </div>
    {% endif %}
